      "require": "./dist/nodeDomInterception-umd.js",
      "types": "./dist/nodeDomInterception.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "testWatch": "jest --watchAll",
    "build": "node --import tsx/esm  ./vite.mts"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@swc/core": "^1.4.17",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.6",
    "eslint": "^8.57.0",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-node-polyfills": "^0.21.0"
  },
  "dependencies": {
    "jsdom": "^24.0.0"
  }
}
