{
  "name": "dom-interception",
  "private": false,
  "version": "1.1.1",
  "description": "Intercepts text of a specified length",
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bosens-China/dom-interception.git"
  },
  "keywords": [
    "dom",
    "rich",
    "interception",
    "text",
    "node"
  ],
  "author": "yliu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bosens-China/dom-interception/issues"
  },
  "homepage": "https://github.com/bosens-China/dom-interception",
  "types": "./dist/index.d.ts",
  "main": "./dist/index-umd.js",
  "module": "./dist/index-es.js",
  "exports": {
    ".": {
      "import": "./dist/index-es.js",
      "require": "./dist/index-umd.js",
      "types": "./dist/index.d.ts"
